{% extends 'main/base.html.twig' %}

{% block content %}

<h1 class="h3 text-center">Inscription</h1>

{{ form_start(form) }}

    {{ form_row(form.email) }}
    {{ form_row(form.username, {
        'label': 'Nom d\'utilisateur'
    }) }}
    {{ form_row(form.plainPassword.first, {
        'label': 'Mot de passe'
    }) }}
    {{ form_row(form.plainPassword.second, {
        'label': 'Répétez mot de passe'
    }) }}

    <button type="submit" class="btn btn-primary" formnovalidate>M'inscrire</button>
{{ form_end(form) }}

{% endblock %}