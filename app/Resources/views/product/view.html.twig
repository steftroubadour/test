{# app/Resources/views/Main/index.html.twig #}

{% extends "main/base.html.twig" %}

{% block content %}

    <div class="card">
        <div class="card-img-top">
            <img class="col-md-4 d-block mx-auto p-2" src="{{ asset(product.image.url) }}" alt="{{ product.image.alt }}"/>
        </div>
        <div class="card-body">
            <div>
                <h3 class="card-title d-inline-block align-middle">{{ product.title }}</h3>
                <h4 class="d-inline-block align-middle mx-4">{{ product.price }}â‚¬</h4>
                <a class="btn btn-success btn-sm mb-2" href="{{ path('basket_add', {'id': product.id}) }}" role="button" >
                    Ajouter au panier
                </a>
            </div>
            <p class="card-text">{{ product.description|nl2br }}</p>

        </div>
    </div>

{% endblock content %}