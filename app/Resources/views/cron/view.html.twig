{# app/Resources/views/basket/view.html.twig #}

{% extends "main/base.html.twig" %}

{% block content %}

    {% for basket in baskets %}
        <h1 class="h3 text-center">Votre panier</h1>
        {% set total = 0 %}
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Produit</th>
                <th scope="col">Prix</th>
            </tr>
            </thead>
            <tbody>
        {% for product in basket.products %}
            <tr>
                <td>{{ product.title }}</td>
                <td>{{ product.price }}€</td>
            </tr>
            {% set total = total + product.price %}
        {% endfor %}
            <tr>

                <td class="text-right">Total :</td>
                <td>{{ total }}€</td>
            </tr>
            </tbody>
        </table>
        <div class="row">
            <div class="col-md-12 text-center">
                <a class="btn btn-success btn-sm" href="{{ path('order_validation') }}" role="button">
                Valider la commande
                </a>
            </div>
        </div>
    {% endfor %}

{% endblock content %}